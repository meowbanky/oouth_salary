# OOUTH Salary Management System - Environment Configuration
# Copy this file to .env and update with your actual credentials
# NEVER commit .env file to version control

# Database Configuration
DB_HOST=localhost
DB_NAME=oouthsal_salary3
DB_USERNAME=oouthsal_root
DB_PASSWORD=your_database_password_here

# SMTP Email Configuration
SMTP_HOST=mail.oouthsalary.com.ng
SMTP_PORT=587
SMTP_USERNAME=report@oouthsalary.com.ng
SMTP_PASSWORD=your_smtp_password_here
SMTP_SECURE=tls
SMTP_FROM_EMAIL=report@oouthsalary.com.ng
SMTP_FROM_NAME=Olabisi Onabanjo University Teaching Hospital, Sagamu

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRY=3600

# API Configuration
API_RATE_LIMIT=100
API_REQUIRE_HTTPS=true
